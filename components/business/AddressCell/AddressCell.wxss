.address-cell {
  border-radius: 10rpx;
  background-color: #fff;
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}
.address-cell.card{
  width: 700rpx;
  box-shadow: 0rpx 1rpx 20rpx 2rpx rgba(1, 1, 1, 0.1);
  margin: 0 auto 30rpx;
}
.address-cell.list{
  width: 100%;
  border-top: 1px solid var(--color-border);
  margin: 0 auto;
}


.cell-active {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}
.cell-active-bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 0;
  height: 0;
  border-top: 50rpx solid var(--color-main);
  border-left: 60rpx solid transparent;
  z-index: 9;
}

.cell-info {
  width: 100%;
  height: 100%;
  flex-shrink: 1;
}

.cell-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.cell-row--main {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: normal;
}

.cell-row--sub {
  font-size: 26rpx;
  color: #999;
}

.cell-action {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cell-default-badge {
  background-color: var(--color-main);
  color: #fff;
  font-size: 26rpx;
  border-radius: 10rpx;
  padding: 0 10rpx;
}

.cell-default-btn {
  font-size: 26rpx;
  color: #575655;
}

.cell-action-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}
