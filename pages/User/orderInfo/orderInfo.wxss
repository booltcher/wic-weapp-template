.container {}

.map-container {
    width: 100%;
    height: 100vh;
    position: fixed;
}

.map-instance {
    width: 100%;
    height: 100%;
}

.map-flow {
    position: fixed;
    width: 100%;
    padding:0 20rpx 20rpx;
    box-sizing: border-box;
    bottom: 200rpx;
    z-index: 10;
}
.order-status-bar{
    position: fixed;
    top: 20rpx;
    border-radius: 20rpx;
    z-index: 20;
    margin: 0 auto;
    width: 710rpx;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.status-text{
    width: 100%;
    flex-shrink: 1;
    margin-right: 20rpx;
}
.status-text-row + .status-text-row{
    margin-top: 20rpx;
}
.status-icon{
    flex-shrink: 0;
    display: flex;
    align-items: center;
}
.status-icon-text{
    margin-right: 10rpx;
    font-size: 30rpx;
}
.order-status-bar--waiting{
    color: #fff;
    background-color: var(--color_waiting_a);
}
.order-status-bar--pending{
    color: #fff;
    background-color: var(--color_success_a);
}
.order-status-bar--done{
    color: #fff;
    background-color: var(--color_header_a);
}
.order-status-bar--cancel{
    color: #fff;
    background-color: var(--color_canceled_a);
}

.order-info-main{
    width: 100%;
}
.info-main-row{
    display: flex;
    width: 100%;
    align-items: flex-start;
}
.info-main-row + .info-main-row{
    margin-top: 20rpx;
}
.info-main-label{
    flex-shrink: 0;
    color: #999;
}
.info-main-text{
    margin-left: 20rpx;
    width: 100%;
    flex-shrink: 1;
}
.order-info-toggle{
    padding-top: 20rpx;
    margin-top: 20rpx;
    border-top: 1px dotted var(--color_border);
}
.goods-wrap{
    box-sizing: border-box;
    width: 100%;
    flex-shrink: 1;
    margin-left: 20rpx;
}
.goods-item{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.goods-item + .goods-item{
    margin-top: 20rpx;
}


.order-btn-wrap {
    position: fixed;
    width: 100%;
    height: 200rpx;
    bottom: 0;
    display: flex;
    align-items: flex-start;
    flex-direction: row;
    justify-content: flex-end;
    margin-top: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    z-index: 10;
    padding: 20rpx 20rpx 0;
}

.order-btn-item {
    height: 60rpx;
    width: 200rpx;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color_border);
    border-radius: 50rpx;
}

.order-btn-item+.order-btn-item {
    margin-left: 20rpx;
}

.order-btn-item--cancel {
    background-color: var(--color_border);
    color: #575655;
}

.order-btn-item--evaluate {
    background-color: var(--color_header);
    color: #fff;
    border-color: var(--color_border);
}
.order-btn-item--evaluated{
    background-color: var(--color_disabled);
    color: #fff;
    border-color: var(--color_disabled);
}

.order-info {
    width: 100%;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 40rpx;
    border-radius: 20rpx;
    position: relative;
    min-height: 500rpx;
    -webkit-transition: min-height .5s ease;
}
.order-info.collapsed{
    min-height: 220rpx;
}

.order-info-collapse-btn {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    top: -24rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 24rpx;
    width: 140rpx;
    background-color: #fff;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

