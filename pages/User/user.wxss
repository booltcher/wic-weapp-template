.container{
    color: #333;
}
.user-bar{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.user-avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    box-shadow: 0px 5rpx 5rpx 0px #E5E5E5;
}
.user-name{
    font-weight: bolder;
    margin-top: 20rpx;
}

.user-intro{
    font-size: 26rpx;
    margin-top: 20rpx;
}
.user-desc{
    display: flex;
    align-items: center;
    justify-content: center;
}
.user-desc-label{
    color: #999;
}

.get-info-btn {
    width: 300rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-top: 140rpx;
    background-color: var(--color-success);
    color: #fff;
}