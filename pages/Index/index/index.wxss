.container {}

.search-bar {
    width: 100%;
    padding: 10rpx 20rpx 150rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-items: center;
    background-color: var(--color_header);
    border-bottom-left-radius: 120rpx;
    border-bottom-right-radius: 120rpx;
}

.search-inner {
    width: 100%;
    background-color: #fff;
    height: 60rpx;
    border-radius: 60rpx;
    flex-shrink: 1;
    display: flex;
    padding: 0 20rpx;
    box-sizing: border-box;
    align-items: center;
}

.search-tip {
    width: 100%;
    margin: 0 20rpx;
    flex-shrink: 1;
    color: #999;
    font-size: 24rpx;
}
.big-swiper-wrap{
    margin-top: -120rpx;
}
swiper {
    width: 680rpx;
    height: 280rpx;
    border-radius: 20rpx;
    margin-top: -100rpx;
    margin: 20rpx auto;
}

swiper-item {
    width: 680rpx;
    height: 280rpx;
    border-radius: 20rpx;
}

swiper-item image {
    width: 680rpx;
    height: 280rpx;
    border-radius: 20rpx;
}

.process-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0rpx 20rpx;
    box-sizing: border-box;
}

.process-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.process-item image {
    width: 70rpx;
    height: 60rpx;
    flex-shrink: 0;
    margin-bottom: 20rpx;
}

.process-text {
    font-size: 24rpx;
    color: #575655;
}

.process-dot {
    position: absolute;
    display: flex;
    width: 40rpx;
    z-index: 10;
    justify-content: space-between;
    right: -20rpx;
    top: 30rpx;
}

.process-dot-inner {
    width: 6rpx;
    height: 6rpx;
    border-radius: 6rpx;
    background-color: var(--color_main);
}

.precess-btn-wrap {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.form-btn {
    width: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 30rpx;
    font-weight: bolder;
    background-color: var(--color_main);
    color: #fff;
    border-radius: 20rpx;
    box-shadow: 0px 0rpx 5rpx 0px var(--color_main);
}

.promise-box {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 30rpx;
    padding: 30rpx 0 20rpx;
}

.promise-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0px 0px 5px 0px #E5E5E5;
    padding: 20rpx;
    border-radius: 10rpx;
}

.promise-item image {
    width: 100rpx;
    height: 100rpx;
    flex-shrink: 0;
}

.pro-title-main {
    font-weight: bolder;
    margin-bottom: 14rpx;
}

.pro-title-sub {
    font-size: 24rpx;
    color: #999;
    -webkit-transform: scale(0.9);
}

.pro-title-sub+.pro-title-sub {
    margin-top: 4rpx;
}

.notice-wrap {
    position: relative;
    width: 680rpx;
    height: 60rpx;
    margin: 20rpx auto;
    border-radius: 20rpx;
    background-color: #fff;
    padding-left: 100rpx;
    box-sizing: border-box;
}

.notice-icon {
    font-size: 16rpx;
    position: absolute;
    color: #fff;
    background-color: rgb(255, 136, 0);
    border-radius: 10rpx;
    padding: 4rpx 6rpx;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.notice-bar {
    width: 100%;
    height: 60rpx;
}

.notice-item {
    height: 60rpx;
    display: flex;
    align-items: center;
}

.notice-inner {
    display: flex;
    align-items: center;
    font-size: 18rpx;
}
.limit-text{
    max-width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.open-btn{
    background-color: transparent;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;
    outline: none;
    border: none;
    margin: 0;
}
.open-btn::after{ border: none; }