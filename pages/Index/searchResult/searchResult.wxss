.container{
    padding-top: 100rpx;
    background-color: #fff;
    box-sizing: border-box;
}
.name-wrap{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 44rpx;
    font-weight: bolder;
    padding:  30rpx;
}
.type-wrap{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.type-wrap-inner{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.type-wrap-inner image{
    width: 120rpx;
    height: 120rpx;
    margin: 20rpx 0;
}
.type-name{
    font-weight: bolder;
    font-size: 32rpx;
    margin-top: 20rpx;
}
.type-explain{
    padding: 20rpx 80rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.contain-wrap, .tip-wrap{
    background-color: #eee;
    border-radius: 10rpx;
    padding: 20rpx;
    margin: 20rpx auto;
    width: 600rpx;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 40rpx;
}
.title{
    font-size: 30rpx;
    margin-bottom: 20rpx;
}




